<%= form_for @comment, remote: true do |f| %>
<div class="add-new-chat-row">
	<div class="new-chat-textarea-col"><%= f.text_area :message, :placeholder=>"Add a new note", :class=>"chat_box" %></div>
	<%= f.hidden_field :goal_id, value: @goal_id %>
	<div class="new-chat-btn-col"><%= f.submit "\u{2192}", :class=>"outline-minor-button new-chat-btn-col" %></div>
	
</div>
<% end %>